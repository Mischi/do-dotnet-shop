@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="@ViewBag.NgApp">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/backend")
    <title>Do.NET Shop Backend</title>
</head>
<body>
    <div class="navbar" bs-navbar>
        <div class="navbar-inner">
            <div class="container">

                <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <!-- Be sure to leave the brand out there if you want it shown -->
                <a class="brand" href="#/">Do.NET Shop Backend</a>

                <form class="navbar-search pull-right" ng-show="showProductSearch">
                    <input type="search" class="search-query" placeholder="Search" ng-model="searchText.name">
                </form>

                <!-- Everything you want hidden at 940px or less, place within here -->
                <div class="nav-collapse collapse">
                    <!-- .nav, .navbar-search, .navbar-form, etc -->
                    <ul class="nav">
                        <li data-match-route="/"><a href="#/">Products</a></li>
                        <li data-match-route="/products/"><a href="#/products/">New Product</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class='container-fluid view' ng-view ng-animate="'fade'"></div>

    @Scripts.Render("~/js/backend")
</body>
</html>
